<ul reversed class="postlist" style="--postlist-index: {{ (postslistCounter or postslist.length) + 1 }}">
    {%- for post in postslist | reverse %}
        {% set index = collections.posts | getCollectionItemIndex(post) %}
	    <li class="postlist-item{% if post.url == url %} postlist-item-active{% endif %}">
            {{index|hexNum}}
		    <a href="{{ post.url }}" class="postlist-link">{% if post.data.title %}{{ post.data.title }}{% else %}<code>{{ post.url }}</code>{% endif %}</a>
            {% if post.data.draft %}<span class="marker-draft">DRAFT</span>{% endif %}
		    <time class="postlist-date" datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate("yyyy-LL-dd") }}</time>
	    </li>
    {%- endfor %}
</ul>
